{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es2022",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2021",
      "dom"
    ],
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"]
}
